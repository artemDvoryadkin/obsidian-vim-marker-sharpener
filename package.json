{
	"name": "Sharpener",
	"version": "1.0.3",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "src/main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production ",
		"test": "jest",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"deploy": "npm run build && copy plugin to obsidian",
		"copy plugin to obsidian": "cp dist/main.js manifest.json styles.css .hotreload  /Users/artemdvoryadkin/Documents/Projects/HH.Obsidian/.obsidian/plugins/obsidian-sharpener",
		"deleteMain": "rm /Users/artemdvoryadkin/Documents/Projects/HH.Obsidian/.obsidian/plugins/obsidian-sharpener/main.js",
		"start": "node src/main.js",
		"build & delpoy Obsidian": "npm run build && npm run 'deleteMain' && npm run 'copy plugin to obsidian'",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@codemirror/language": "^6.11.0",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.36.4",
		"@types/jest": "^29.5.14",
		"@types/node": "^16.11.6",
		"@types/remarkable": "^2.0.8",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"obsidian": "latest",
		"obsidian-typings": "^2.42.0",
		"remarkable": "^2.0.1",
		"ts-jest": "^29.3.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"remark": "^15.0.1",
		"remark-parse": "^11.0.0",
		"remark-stringify": "^11.0.0"
	}
}
